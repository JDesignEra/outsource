<div class="accordion md-accordion" id="accordionServices1" role="tablist" aria-multiselectable="true">

    <div class="card">

        <!-- Card header -->
        <div class="card-header" role="tab" id="headingServices1">

            <a class="collapsed" data-toggle="collapse" data-parent="#accordionServices1" href="#collapseServices1"
                aria-expanded="true" aria-controls="collapseServices1">

                <h2 class="mb-0 text-dark">
                    Illustration Services <i class="fas fa-angle-down rotate-icon"></i>
                </h2>
            </a>
        </div>

        <!-- Card body -->
        <div id="collapseServices1" class="collapse show row justify-content-around" role="tabpanel"
            aria-labelledby="headingPortfolio1" data-parent="#accordionServices1">

            <div class="row justify-content-around">
                {{#each services}}
                <div class="z-depth-2 card col-12 col-md-4 col-lg-6 p-4 mt-4">
                    <div class="view overlay">
                        <img onerror='this.src = "/img/services/default.jpg"' class="card-img-top"
                            src="/uploads/services/{{uid}}/{{id}}.png">
                        <div class="viewcounts">
                            <span class="white-text font-weight-bold">{{views}}</span>
                            <i class="far fa-eye fa-fw white-text"></i>
                        </div>
                    </div>

                    <a class="btn-floating btn-primary m-0 material-tooltip-sm" data-tooltip="tooltip"
                        data-placement="top" title="View More Details" href="/services/view/{{uid}}/{{id}}">
                        <i class="far fa-eye"></i>
                    </a>

                    <div class="card-body">
                        <h4 class="card-title name" data-names="Service Title">
                            {{name}}</h4>

                        <hr>

                        <p class="card-text">
                            {{desc}}<br>
                            Last Updated: {{date}}
                        </p>
                    </div>
                    <div class="viewcounts text-right mt-4 text-right">
                        <form method="post" action="/services/fav/{{id}}">
                            <button class="favs btn btn-sm btn-red material-tooltip-sm" data-tooltip="tooltip"
                                data-placement="top" title="Favourite/Unfavourite" type="submit">
                                <span class="font-weight-bold">{{favourites}}</span>
                                <i class="fas fa-heart fa-fw"></i>
                            </button>
                        </form>
                    </div>

                    <div class="card-footer deep-purple accent-3 white-text text-center">
                        <h5 class="m-0">
                            ${{price}}
                        </h5>
                    </div>
                </div>
                {{/each}}
            </div>



        </div>


    </div>



</div>