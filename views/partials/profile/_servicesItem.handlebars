<div class="accordion md-accordion" id="accordionServices1" role="tablist" aria-multiselectable="true">

    <div class="card">

        <!-- Card header -->
        <div class="card-header" role="tab" id="headingServices1">

            <a class="collapsed" data-toggle="collapse" data-parent="#accordionServices1" href="#collapseServices1"
                aria-expanded="true" aria-controls="collapseServices1">

                <h2 class="mb-0 text-dark">
                    Illustration Services <i class="fas fa-angle-down rotate-icon"></i>
                </h2>
            </a>
            <div>
                <a role="button" href="/services/add" class="btn btn-rounded btn-success">
                    Add a Service <i class="fas fa-plus mr-1"></i>
                </a>
            </div>
        </div>

        <!-- Card body -->
        <div id="collapseServices1" class="collapse show row justify-content-around" role="tabpanel"
            aria-labelledby="headingPortfolio1" data-parent="#accordionServices1">

            <div class="row justify-content-around">
                {{#each services}}
                <div class="z-depth-2 card col-12 col-md-4 col-lg-6 p-4 mt-4">
                    <div class="view overlay">
                        <img onerror='this.src = "/img/services/default.jpg"' class="card-img-top"
                            src="/uploads/services/{{uid}}/{{id}}.png">
                        <div class="viewcounts">
                            <span class="white-text font-weight-bold">{{views}}</span>
                            <i class="far fa-eye fa-fw white-text"></i>
                        </div>
                    </div>

                    <a class="btn-floating btn-action btn-deep-purple ml-auto mr-4 material-tooltip-sm"
                        data-tooltip="tooltip" data-placement="top" title="View More Details"
                        href="/services/view/{{uid}}/{{id}}">
                        <i class="far fa-eye"></i>
                    </a>

                    <div class="card-body">
                        <h4 class="card-title name" data-names="Service Title">
                            {{name}}</h4>

                        <hr>

                        <p class="card-text">
                            {{desc}}
                        </p>
                        <p class="card-text">Last Updated: {{date}}</p>
                    </div>

                    <div class="card-footer deep-purple accent-2 white-text text-center mt-4">
                        <h5 class="m-0">
                            ${{price}}
                        </h5>
                    </div>

                    <div class="row justify-content-between">
                        <a role="button" class="btn btn-info col-5" href="/services/edit/{{id}}" style="display: inline-block"><i
                                class="fas fa-edit fa-lg mr-1"></i>Edit</a>
                        <a role="button" class="btn btn-danger col-5" style="display: inline-block" data-toggle="modal"
                            data-target="#confirm{{id}}"><i class="fas fa-trash-alt fa-lg mr-1"></i>Delete</a>
                    </div>
                    {{#extend 'modals'}}
                    <div class="modal fade" id="confirm{{id}}" tabindex="-1" role="dialog" aria-labelledby="label"
                        aria-hidden="true">

                        <!-- Change class .modal-sm to change the size of the modal -->
                        <div class="modal-dialog modal-sm" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h4 class="modal-title w-100" id="label">Confirm Delete?</h4>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="my-2 row justify-content-around mx-auto col-12">
                                    <a role="button" type="button" class="btn btn-danger" href="/services/delete/{{id}}">
                                        Yes
                                    </a>
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>

                                </div>
                            </div>
                        </div>
                    </div>
                    {{/extend}}
                </div>
                {{/each}}
            </div>



        </div>


    </div>



</div>