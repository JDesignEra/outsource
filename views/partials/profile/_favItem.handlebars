<div class="accordion md-accordion" id="accordionServices1" role="tablist" aria-multiselectable="true">
    <div class="card">
        <div id="collapseServices1" class="collapse show" role="tabpanel" aria-labelledby="headingPortfolio1"
            data-parent="#accordionServices1">
            <div class="card-body">
                {{#if favs}}
                <div class="row justify-content-start">
                    {{#each favs}}
                    <div class="col-12 col-md-4 col-lg-4">
                        <div class="z-depth-2 card">
                            <div class="view overlay">
                                <img onerror='this.src = "/img/services/default.jpg"' class="card-img-top"
                                    src="/uploads/services/{{uid}}/{{id}}.png">
                                <a>
                                    <div class="mask rgba-black-light"></div>
                                </a>
                            </div>
                            <div class="btn-action ml-auto mr-3">
                                <a class="btn-floating btn-primary m-0 material-tooltip-sm" data-tooltip="tooltip"
                                    data-placement="top" title="View More Details" href="/services/view/{{uid}}/{{id}}">
                                    <i class="far fa-eye"></i>
                                </a>
                            </div>
                            <div class="card-body pb-2 d-flex flex-column">
                                <div class="d-flex mt-2">
                                    <div class="flex-fill text-left">
                                        {{#ifFile (concat './public/uploads/profile/' this.uid '/profilePic.png')}}
                                        <img src="/uploads/profile/{{uid}}/profilePic.png"
                                            class="rounded-circle img-fluid z-depth-1" style="max-width: 2rem;">
                                        {{else}}
                                        <img src="/img/profile/default.png" class="rounded-circle img-fluid z-depth-1"
                                            style="max-width: 2rem;">
                                        {{/ifFile}}

                                        <a href="/profile/view/{{uid}}">{{username}}</a>
                                    </div>
                                    <div class="d-flex align-items-center">
                                        <span class="text-muted small">
                                            <i class="far fa-clock mr-2"></i>{{date}}
                                        </span>
                                    </div>
                                </div>


                                <div class="d-flex mt-4">
                                    <div class="flex-fill">
                                        <h4 class="card-title mb-0 text-left">
                                            {{name}}</h4>
                                    </div>
                                    <div class="flex-fill text-right font-weight-bold">
                                        {{views}}<i class="far fa-eye fa-fw ml-2"></i>
                                    </div>
                                </div>

                                <hr class="w-100">

                                <div class="flex-fill text-left">
                                    <p class="card-text">
                                        {{desc}}
                                    </p>
                                </div>
                                <div class="d-flex">
                                    <form class="flex-fill text-right" method="post" action="/services/fav/{{id}}">
                                        <button class="btn btn-sm btn-red mr-0 material-tooltip-sm"
                                            data-tooltip="tooltip" data-placement="top" title="Favourite/Unfavourite">
                                            <span class="font-weight-bold">
                                                {{favourites}}<i class="fas fa-heart ml-2"></i>
                                            </span>
                                        </button>
                                    </form>
                                </div>
                            </div>

                            <div class="card-footer deep-purple accent-2 white-text text-center">
                                <h5 class="m-0">
                                    ${{price}}
                                </h5>
                            </div>

                        </div>
                    </div>
                    {{/each}}
                </div>
                {{else}}
                <div>
                    <h3 class="text-center font-weight-bold">No Favourites</h3>
                </div>
                {{/if}}
            </div>

        </div>
    </div>



</div>