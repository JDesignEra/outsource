<section class="files">
    <div class="row">
        <div class="col-12 col-md-3 my-4 my-md-0">
            <div class="treeview card card-cascade narrower">
                <div
                    class="view view-cascade primary-gradient narrower py-2 mx-4 mb-3 d-flex justify-content-center align-items-center">
                    <span class="white-text mx-3">My Folders</span>
                </div>

                <a data-toggle="collapse" href="#folders">
                    <h6 class="pt-2 pl-3 mb-0">
                        <i class="far fa-folders"></i> Folders
                        <i class="float-right pr-3 fas fa-angle-up rotate-icon"></i>
                    </h6>
                </a>

                <hr class="mb-0">

                <ul class="mt-4 mb-1 pl-3 pb-2 collapse show" id="folders">
                    <li>
                        <i class="fas fa-angle-right rotate"></i>
                        <span><i class="far fa-folder"></i> Project 1</span>
                        <ul class="nested">
                            <li><i class="far fa-folder"></i> img</li>
                        </ul>
                    </li>
                    <li>
                        <span><i class="far fa-folder"></i> Project 2</span>
                    </li>
                </ul>
            </div>
        </div>

        <div class="col-12 col-md-9 col-lg-7">
            <div class="card card-cascade narrower">
                <div class="view view-cascade primary-gradient narrower py-2 mx-4 mb-3">
                    <ol class="breadcrumb justify-content-center align-items-center white-text transparent py-0 m-0">
                        {{#if breadcrumbs}}
                            {{#each breadcrumbs as |val key|}}
                                <li class="breadcrumb-item text-capitalize">
                                    {{#ifCond (concat @index '<' ../breadcrumbs.length '- 1')}}
                                        <a href="{{lookup ../crumbLinks @index}}">{{ this }}</a>
                                    {{else}}
                                        {{ this }}
                                    {{/ifCond}}
                                </li>
                            {{/each}}
                        {{/if}}
                    </ol>
                </div>

                <div class="card-body p-0">
                    <div class="table-responsive overflow-x-hidden mt-2">
                        <div class="table-editable table-hover">
                            <table id="files-table" class="table table-striped text-center">
                                <thead class="deep-purple accent-3 white-text">
                                    <th class="d-none d-md-table-cell">
                                        <div class="form-check">
                                            <input id="checkAll" class="form-check-input" type="checkbox">
                                            <label class="form-check-label" for="checkAll"></label>
                                        </div>
                                    </th>
                                    <th>Name</th>
                                    <th class="d-none d-md-table-cell">Size</th>
                                    <th class="d-none d-md-table-cell">Type</th>
                                    <th class="d-none d-md-table-cell">Shared</th>
                                    <th class="d-none d-md-table-cell">Modified</th>
                                    <th class="d-table-cell d-md-none">Actions</th>
                                </thead>
                                <tbody>
                                    <form method="post">
                                        {{> _filesRow }}
                                    </form>
                                </tbody>
                            </table>
                        </div>
                    </div>

                    {{#if items}}
                        <p class="text-center grey-text small font-weight-bold">End of table</p>
                    {{/if}}
                </div>
            </div>
        </div>

        <div class="d-none d-lg-block col-2 animated fadeIn">
            <div class="card card-cascade narrower action-card sticky">
                <div
                    class="view view-cascade primary-gradient narrower py-2 mx-4 mb-3 d-flex justify-content-center align-items-center">
                    <span class="white-text mx-3">Actions</span>
                </div>

                <div class="card-body card-body-cascade p-0">
                    <div class="input-group px-3 mt-2 mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text primary-gradient white-text">
                                <i class="fas fa-search"></i>
                            </span>
                        </div>
                        
                        <div class="md-form md-outline m-0">
                            <input id="action-search" class="form-control" type="text" name="search">
                            <label for="action-search">Search</label>
                        </div>
                    </div>

                    <div class="list-group list-group-flush">
                        <button class="list-group-item list-group-item-action" data-toggle="modal" data-target="#uploadModal">
                            <i class="far fa-cloud-upload-alt"></i> Upload File(s)
                        </button>
                        <button class="list-group-item list-group-item-action" data-toggle="modal" data-target="#newFileModal">
                            <i class="far fa-file-plus"></i> New File
                        </button>
                        <button class="list-group-item list-group-item-action" data-toggle="modal" data-target="#newFolderModal">
                            <i class="far fa-folder-plus"></i> New Folder
                        </button>
                    </div>

                    <hr class="my-0">

                    <div id="cb-actions" class="animated faster d-none">
                        <p class="mt-3 mb-1">
                            <small id="cb-count" class="px-3 font-weight-bolder grey-text">0 Item(s) Selected</small>
                        </p>

                        <div class="list-group list-group-flush">
                            <button class="download list-group-item list-group-item-action animated faster">
                                <i class="far fa-cloud-download-alt"></i> Download
                            </button>
                            <button class="comments list-group-item list-group-item-action animated faster">
                                <i class="far fa-comments"></i> Comments
                            </button>
                            <button class="rename list-group-item list-group-item-action animated faster">
                                <i class="far fa-i-cursor"></i> Rename
                            </button>
                            <button class="list-group-item list-group-item-action">
                                <i class="fas fa-exchange-alt"></i> Move
                            </button>
                            <button class="list-group-item list-group-item-action">
                                <i class="far fa-copy"></i> Copy
                            </button>
                            <button class="list-group-item list-group-item-action">
                                <i class="far fa-trash-alt"></i> Delete
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Upload Files Modal -->
    <div class="modal fade" id="uploadModal" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header deep-purple accent-2 white-text">
                    <h4 class="modal-title w-100">
                        <i class="far fa-cloud-upload-alt mr-1"></i> UPLOAD FILE(S)
                    </h4>

                    <button type="button" class="close" data-dismiss="modal">
                        <span class="white-text">&times;</span>
                    </button>
                </div>

                <div class="modal-body">
                    <form class="files-upload" action="{{ url }}/%3Fupload" method="post" enctype="multipart/form-data">
                        <input type="file" name="files" multiple />
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- New File Modal -->
    <div class="modal fade" id="newFileModal" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header deep-purple accent-2 white-text">
                    <h4 class="modal-title w-100">
                        <i class="far fa-file-plus mr-1"></i> NEW FILE
                    </h4>

                    <button type="button" class="close" data-dismiss="modal">
                        <span class="white-text">&times;</span>
                    </button>
                </div>

                <div class="modal-body">
                    <form method="post">
                        <div class="input-group">
                            <input class="form-control" type="text" placeholder="Filename" name="name">
                            <span class="input-group-text border-left-0 border-right-0 rounded-0">.</span>
                            <input class="form-control" type="text" placeholder="Extension" name="ext">

                            <div class="input-group-append">
                                <button class="btn btn-md primary-gradient m-0 px-3 py-2 waves-effect">
                                    <i class="far fa-file-plus mr-1"></i> Create File
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- New Folder Modal -->
    <div class="modal fade" id="newFolderModal" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header deep-purple accent-2 white-text">
                    <h4 class="modal-title w-100">
                        <i class="far fa-folder-plus mr-1"></i> NEW FOLDER
                    </h4>

                    <button type="button" class="close" data-dismiss="modal">
                        <span class="white-text">&times;</span>
                    </button>
                </div>

                <div class="modal-body">
                    <form class="needs-validation" action="{{ url }}/%3Fnewfolder" method="post" novalidate>
                        <div class="input-group">
                            <input class="form-control" type="text" placeholder="Folder Name" {{#if forms.name}}value="{{ forms.name }}"{{/if}} name="name">

                            <div class="input-group-append">
                                <button class="btn btn-md primary-gradient m-0 px-3 py-2 waves-effect">
                                    <i class="far fa-file-plus mr-1"></i> Create Folder
                                </button>
                            </div>

                            <div class="invalid-feedback">
                                {{errors.name}}
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Share Link Modal -->
    <div class="modal fade" id="shareModal" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header deep-purple accent-2 white-text">
                    <h4 class="modal-title w-100">
                        <i class="far fa-share-alt mr-1"></i> SHARE
                    </h4>

                    <button type="button" class="close" data-dismiss="modal">
                        <span class="white-text">&times;</span>
                    </button>
                </div>

                <div class="modal-body">
                    <form method="post">
                        <div class="input-group">
                            <input class="form-control" type="text" placeholder="Email or Username" name="name">

                            <div class="input-group-append">
                                <button class="btn btn-md primary-gradient m-0 px-3 py-2 waves-effect">
                                    <i class="far fa-file-plus mr-1"></i> Share With
                                </button>
                            </div>
                        </div>
                    </form>
                </div>

                <div class="modal-footer">
                    <span class="mr-auto">
                        <span class="border border-primary rounded-circle p-2 mr-1"><i class="far fa-unlink"></i></span> No share link created
                    </span>
                    <span class="ml-auto">
                        <a href="#">Create Share Link</a>
                    </span>
                </div>
            </div>
        </div>
    </div>
</section>

{{#extend "fixedAction"}}
<!-- Mobile FAB Action -->
<div id="mobileActions" class="dropdown fixed-bottom text-right d-block d-lg-none">
    <button class="btn btn-floating primary-gradient dropdown-toggle" type="button" data-toggle="dropdown">
        <i class="fas fa-ellipsis-h"></i>
    </button>

    <div class="dropdown-menu mb-2">
        <div class="input-group input-group-sm px-2 mt-2 mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text primary-gradient white-text">
                    <i class="fas fa-search"></i>
                </span>
            </div>
            
            <div class="md-form md-outline m-0">
                <input id="mobile-search" class="form-control" type="text" name="search">
                <label for="mobile-search">Search</label>
            </div>
        </div>

        <hr class="mt-3 mb-2">

        <button class="dropdown-item" data-toggle="modal" data-target="#uploadModal">
            <i class="far fa-cloud-upload-alt"></i> Upload File(s)
        </button>
        <button class="dropdown-item" data-toggle="modal" data-target="#newFileModal">
            <i class="far fa-file-plus"></i> New File
        </button>
        <button class="dropdown-item" data-toggle="modal" data-target="#newFolderModal">
            <i class="far fa-folder-plus"></i> New Folder
        </button>

        <hr class="my-2">

        <div class="smooth-scroll">
            <a class="dropdown-item" href="#top">
                <i class="fas fa-arrow-up"></i> To Top
            </a>
        </div>
    </div>
</div>
{{/extend}}

{{#extend 'scripts'}}
<script src="/js/vendor/mdb/modules/datatables.min.js"></script>
<script src="/js/vendor/mdb/modules/datatables-select.min.js"></script>
<script src="/js/files.js"></script>
{{/extend}}