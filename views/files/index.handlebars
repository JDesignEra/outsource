    <button class="btn btn-floating primary-gradient dropdown-toggle" type="button" data-toggle="dropdown">
        <i class="fas fa-ellipsis-h"></i>
    </button>

    <div id="mobile-action-menu" class="dropdown-menu mb-2">
        <div id="mobile-search" class="px-2">
            <div class="input-group mt-2 mb-3">
                <div class="md-form md-outline">
                    <input class="form-control" type="text" name="search">
                    <label>Search</label>
                </div>

                <div class="input-group-prepend">
                    <button class="btn btn-md btn-primary m-0 px-3 py-2 dropdown-toggle" data-toggle="collapse">
