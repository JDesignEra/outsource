{{#extend "hero"}}
<section class="home-hero">
    <div id="carousel" class="carousel slide carousel-fade z-depth-3" data-ride="carousel">
        <div class="carousel-inner" role="listbox">
            <div class="carousel-item active">
                <div class="view">
                    <video class="video-fluid" autoplay loop muted>
                        <source src="/vid/home_carousel/forest.mp4" type="video/mp4" />
                    </video>
                </div>

                <div class="carousel-caption d-flex align-items-center">
                    <div class="animated fadeInDown mask rgba-black-light rounded z-depth-1 p-4 w-100">
                        <h1 class="h1-responsive mb-0 mb-md-2">Welcome to OutSource</h1>
                        <p class="d-none d-md-block">
                            A platform for freelancers to offer services to clients worldwide.
                        </p>
                    </div>
                </div>
            </div>

            <div class="carousel-item">
                <div class="view">
                    <video class="video-fluid" autoplay loop muted>
                        <source src="/vid/home_carousel/photography.mp4" type="video/mp4" />
                    </video>
                    <div class="mask rgba-deep-purple-light"></div>
                </div>

                <div class="carousel-caption d-flex align-items-center">
                    <div class="animated fadeInDown mask rgba-black-light rounded z-depth-1 p-4  w-100">
                        <h1 class="h1-responsive">Looking for Services?</h1>
                        <p class="d-none d-md-block">
                            Are you looking to hire someone for their services, look no further.<br />
                            OutSource provides you a platform where freelancers offer a wide range of services.
                        </p>

                        <a class="btn btn-md primary-gradient" href="/services">
                            <i class="far fa-eye"></i> View Marketplace
                        </a>
                    </div>
                </div>
            </div>

            <div class="carousel-item">
                <div class="view">
                    <video class="video-fluid" autoplay loop muted>
                        <source src="/vid/home_carousel/typing.mp4" type="video/mp4" />
                    </video>
                    <div class="mask rgba-deep-purple-light"></div>
                </div>

                <div class="carousel-caption d-flex align-items-center">
                    <div class="animated fadeInDown mask rgba-black-light rounded z-depth-1 p-4  w-100">
                        <h1 class="h1-responsive">Register on OutSource</h1>
                        <p class="d-none d-md-block">
                            Register an account with us today as a service provider or as a client.<br />
                        </p>

                        <a class="btn btn-md primary-gradient" href="/register">
                            <i class="far fa-user-plus"></i> Register
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <a class="carousel-control-prev" href="#carousel" role="button" data-slide="prev">
            <i class="fas fa-chevron-left fa-lg"></i>
        </a>
        <a class="carousel-control-next" href="#carousel" role="button" data-slide="next">
            <i class="fas fa-chevron-right fa-lg"></i>
        </a>
    </div>
</section>
{{/extend}}

<section class="home">
    <h3 class="h3-responsive font-weight-bold text-center text-primary my-4">
        Top Favourite Services
    </h3>
    <div class="row">
        {{#if services.topFavs}}
            {{#each services.topFavs}}
                <div class="col-12 col-md-3 d-flex align-items-stretch mt-4 mt-md-0">
                    <div class="card w-100">
                        <div class="view overlay">
                            {{#ifFile (concat './public/uploads/services/' this.uid '/' this.id '.png')}}
                                <img class="card-img-top" src="/uploads/services/{{this.uid}}/{{this.id}}.png">
                            {{else}}
                                <img class="card-img-top" src="/img/services/default.jpg">
                            {{/ifFile}}

                            <a><div class="mask rgba-black-light"></div></a>
                        </div>

                        <a class="btn-floating btn-action btn-primary ml-auto mr-3 material-tooltip-sm" data-tooltip="tooltip" data-placement="top" title="View More Details" href="/services/view/{{this.uid}}/{{this.id}}">
                            <i class="far fa-eye"></i>
                        </a>

                        <div class="card-body d-flex flex-column">
                            <div class="d-flex mt-2">
                                <div class="flex-fill">
                                    {{#ifFile (concat './public/uploads/profile/' this.uid '/profilePic.png')}}
                                        <img src="/uploads/profile/{{uid}}/profilePic.png" class="d-inline rounded-circle img-fluid z-depth-1" style="width: 2rem;">
                                    {{else}}
                                        <img src="/img/profile/default.png" class="d-inline rounded-circle img-fluid z-depth-1" style="width: 2rem;">
                                    {{/ifFile}}

                                    <a class="align-middle ml-1" href="/profile/view/{{uid}}">{{username}}</a>
                                </div>

                                <div class="d-flex align-items-center">
                                    <span class="text-muted small">
                                        <i class="far fa-clock mr-2"></i>{{this.date}}
                                    </span>
                                </div>
                            </div>

                            <div class="d-flex mt-4">
                                <div class="flex-fill">
                                    <h4 class="card-title mb-0">{{this.name}}</h4>
                                </div>

                                <div class="d-flex align-items-center font-weight-bold ml-3">
                                    {{this.views}}<i class="far fa-eye ml-2"></i>
                                </div>
                            </div>

                            <hr class="w-100">
                            
                            <div class="flex-fill">
                                <p class="card-text">
                                    {{this.desc}}
                                </p>
                            </div>

                            <div class="d-flex">
                                <form class="flex-fill text-right" method="post" action="/services/fav/{{this.id}}">
                                    <button class="btn btn-sm btn-red mr-0 material-tooltip-sm" data-tooltip="tooltip" data-placement="top" title="Favourite/Unfavourite">
                                        <span class="font-weight-bold">
                                            {{this.favourites}}<i class="fas fa-heart ml-2"></i>
