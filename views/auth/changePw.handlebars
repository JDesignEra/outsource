<div class="row">
  <div class="col-md-12">
    <form action="/forgot" method="POST">
      <legend>
        Change Password
      </legend>
      <div class="form-group">
        <label for="email">
          Current Password
        </label>
        <input type="email" name="currentPass" autofocus class="form-control" />
      </div>
      <div class="form-group">
        <label for="email">
          New Password
        </label>
        <input type="email" name="newPass" autofocus class="form-control" />
      </div>
      <div class="form-group">
        <label for="email">
          Confirm New Password
        </label>
        <input type="email" name="confirmPass" autofocus class="form-control" />
      </div>
      <div class="form-group">
        <input type="submit" class="btn btn-primary" value="Reset Password" />
      </div>
    </form>
  </div>
</div>