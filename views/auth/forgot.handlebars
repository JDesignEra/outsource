{{setVar "mainType" "vCenter"}}

{{#extend 'videoBg'}}
	<div class="video-bg-wrapper view">
		<video class="video-bg" autoplay muted loop>
			<source src="/vid/auth/forgot_password.mp4" type="video/mp4">
		</video>
		
		<div class="mask flex-center rgba-deep-purple-light"></div>
	</div>
{{/extend}}

<section class="forgot-password">
	<div class="row">
		<div class="col-md-6 mx-auto">
			<div class="card z-depth-3">
				<form class="card-body text-center" action="/forgot" method="post">
					<h3 class="text-center">Forgot Password</h3>

					<div class="md-form md-outline">
						<input id="email" type="email" name="email" class="form-control">
						<label for="email">Email</label>
					</div>

					<button class="btn btn-md btn-outline-primary btn-rounded" type="submit">
						<i class="far fa-unlock-alt mr-2"></i> Reset Password
					</button>
				</form>
			</div>
		</div>
	</div>
</section>

