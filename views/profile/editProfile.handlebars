<section class="edit-profile">
    <div class="row justify-content-around">
        <div class="col-4 z-depth-2">
            <div class="">
                <!-- Card -->
                <div class="testimonial-card">

                    <!-- Background color -->
                    {{!-- <div style="height:auto;" class="card-up indigo lighten-1 rounded-0">
                    </div> --}}
                    <!-- Avatar -->
                    <div class="avatar mx-auto white mt-4">
                        <img src="https://picsum.photos/id/659/400/" class="rounded-circle lozad" alt="">
                    </div>
                    <!-- Content -->
                    <div class="card-body">
                        <!-- Name -->
                        <h3 class="card-title">{{user.username}}</h3>

                        <h5 class="card-title text-muted">
                            {{#if user.jobTitle}}
                            {{user.jobTitle}}
                            {{else}}
                            Service Provider
                            {{/if}}
                        </h5>

                        <br>
                        <p class="text-left"> <b>Followers:</b> {{user.followers}} </p>
                        <p class="text-left"> <b>Following:</b> {{user.following}}</p>
                        <hr class="hr-purple">


                        <div class="form-group">
                            <label for="website" class="text-left mr-auto">Website</label>
                            <input type="text" class="form-control" name="website" id="website"
                                aria-describedby="helpId" placeholder="e.g. www.mywebsite.com" value="{{user.website}}">
                        </div>


                        <div class="form-group">
                            <label for="date-picker-example">Birthday</label>
                            <input placeholder="Selected date" type="text" id="date-picker-example"
                                class="form-control datepicker">
                        </div>


                        <div class="form-group">
                            <label for="gender">Gender</label>
                            <select name="gender" id="gender" class="browser-default custom-select custom-select mb-3">
                                <option value="{{user.gender}}" selected>{{user.gender}}</option>
                                <hr>
                                <option value="Male">Male</option>
                                <option value="Female">Female</option>
                                <option value="Others">Others</option>

                            </select>
                        </div>

                        <div class="form-group">
                            <label for="location">Country</label>
                            <select name="location" id="location"
                                class="browser-default custom-select custom-select mb-3">
                                <option value="{{user.location}}" selected>{{user.location}}</option>
                                {{#each countryList}}
                                <option value="{{this.name}}">{{this.name}}</option>
                                {{/each}}
                            </select>
                        </div>

                        <div class="form-group">
                            <label for="occupation" class="">Occupation</label>
                            <input type="text" class="form-control" name="occupation" id="occupation"
                                aria-describedby="helpId" placeholder="e.g. Illustrator" value="{{user.occupation}}">
                        </div>


                        <p class="text-left"><b>Email:</b> {{user.email}}</p>

                        <hr class="hr-purple">


                    </div>
                </div>
            </div>

            <div class="mt-3">
                <!-- Card -->
                <div class="testimonial-card ">
                    <!-- Content -->
                    <div class="card-body">
                        <!-- Name -->
                        <h4 class="card-title text-left">Bio</h4>



                        <div class="form-group">
                            <textarea class="form-control rounded-0" id="bio" name="bio" value="{{user.bio}}"
                                rows="10"></textarea>
                        </div>
                        <hr class="hr-purple">
                        <h4 class="card-title text-left">Skills</h4>
                        <div class="row justify-content-start pl-2">
                            <button type="button"
                                class="btn btn-outline-secondary btn-rounded waves-effect skill-button">Illustration</button>
                            <button type="button"
                                class="btn btn-outline-secondary btn-rounded waves-effect skill-button">Logo
                                Design</button>
                            <button type="button"
                                class="btn btn-outline-secondary btn-rounded waves-effect skill-button">Digital
                                Art</button>
                        </div>

                        <hr class="hr-purple">


                    </div>
                </div>
            </div>

            <br>
            <br>
        </div>
    </div>

</section>