<section class="home">
    <table id="dtMaterialDesignExample" class="table table-striped" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th class="th-sm">Job No.</th>
                <th class="th-sm">Name</th>
                <th class="th-sm">Description</th>
                <th class="th-sm">Category</th>
                <th class="th-sm">Payment</th>
                <th class="th-sm"></th>
            </tr>
        </thead>
        <tbody>
            {{#if job}}
            {{#each job}}
            <tr>
                <td>{{id}}</td>
                <td>{{name}}</td>
                <td>{{desc}}</td>
                <td>{{category}}</td>
                <td>${{salary}}</td>
                <td class="text-right"><a href="/job/delete/{{id}}" class="btn btn-danger">Reject<i class="far fa-trash-alt ml-1"></i></a></td>
            </tr>
            {{/each}}
            {{/if}}
        </tbody>
        <tfoot>
        </tfoot>
    </table>
</section>
{{#extend 'scripts'}}
<script src="/js/vendor/mdb/modules/datatables.min.js"></script>
<script src="/js/job.js"></script>
{{/extend}}