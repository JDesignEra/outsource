<section class="manage">
    <div class="container">
        <div class="text-center">
            <a role="button" href="/services/add" class="btn btn-rounded btn-success">
                Add a Service <i class="fas fa-plus mr-1"></i>
            </a>
        </div>
        {{#if services}}
        <div class="row" id="servcon">
            {{#each services}}
            <div class="col-12 col-md-4 col-lg-3 d-flex align-items-stretch">
                <div class="card w-100">
                    <div class="view overlay border-bottom border-primary rounded-top">
                        <img onerror='this.src = "/img/services/default.jpg"' class="card-img-top"
                            src="/uploads/services/{{uid}}/{{id}}.png" alt="Image not available">

                        <a><div class="mask rgba-black-light"></div></a>
                    </div>

                    <div class="btn-action ml-auto mr-3">
                        <a class="btn-floating btn-danger m-0 mr-2 material-tooltip-sm" href="/services/delete/{{id}}"
                            data-tooltip="tooltip" data-placement="top" title="Delete">
                            <i class="far fa-trash-alt"></i>
                        </a>

                        <a class="btn-floating btn-success m-0 mr-2 material-tooltip-sm" href="/services/edit/{{id}}"
                            data-tooltip="tooltip" data-placement="top" title="Edit">
                            <i class="far fa-edit"></i>
                        </a>

                        <a class="btn-floating btn-primary m-0 material-tooltip-sm" href="/services/view/{{uid}}/{{id}}"
                            data-tooltip="tooltip" data-placement="top" title="View More Details">
                            <i class="far fa-eye"></i>
                        </a>
                    </div>

                    <div class="card-body d-flex flex-column">
                        <div class="d-flex mt-2">
                            <div class="flex-fill">
                                {{#ifFile (concat './public/uploads/profile/' this.uid '/profilePic.png')}}
                                    <img src="/uploads/profile/{{uid}}/profilePic.png" class="rounded-circle img-fluid z-depth-1" style="width: 2rem;">
                                {{else}}
                                    <img src="/img/profile/default.png" class="rounded-circle img-fluid z-depth-1">
                                {{/ifFile}}

                                <a class="align-middle ml-1" href="/profile/view/{{uid}}">{{username}}</a>
                            </div>

                            <div class="d-flex align-items-center">
                                <span class="text-muted small">
                                    <i class="far fa-clock mr-2"></i>{{this.date}}
                                </span>
                            </div>
                        </div>

                        <div class="d-flex mt-4">
                            <div class="flex-fill">
                                <h4 class="card-title mb-0">{{this.name}}</h4>
                            </div>

                            <div class="d-flex align-items-center font-weight-bold ml-3">
                                {{this.views}}<i class="far fa-eye ml-2"></i>
                            </div>
                        </div>

                        <hr class="w-100">
                        
                        <div class="flex-fill">
                            <p class="card-text">
                                {{this.desc}}
                            </p>
                        </div>

                        <div class="d-flex">
                            <form class="flex-fill text-right" method="post" action="/services/fav/{{this.sid}}">
                                <button class="btn btn-sm btn-red mr-0 material-tooltip-sm" data-tooltip="tooltip" data-placement="top" title="Favourite/Unfavourite">
                                    <span class="font-weight-bold">
                                        {{this.favourites}}<i class="fas fa-heart ml-2"></i>
                                    </span>
                                </button>
                            </form>
                        </div>
                    </div>

                    <div class="card-footer deep-purple accent-3 white-text text-center">
                        <h5 class="m-0">
                            ${{price}}
                        </h5>
                    </div>
                </div>
            </div>
