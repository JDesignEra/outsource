    </div>

    <!-- services cards -->
    {{#if services}}
    <div class="row" id="servcon">
        {{#each services}}
        <div class="col-12 col-md-4 col-lg-3 mt-4 servicecards {{replacecommas category}}" data-views="{{views}}"
            data-date="{{time}}" data-favs="{{favourites}}">
            <div class="card">
                <div class="view overlay">
                    <img onerror='this.src = "/img/services/default.jpg"' class="card-img-top" src="/uploads/services/{{uid}}/{{id}}.png" alt="Image not available">
                    <a><div class="mask rgba-black-light"></div></a>
                </div>

                <div class="btn-action ml-auto mr-3">
                    <a class="btn-floating btn-primary m-0 material-tooltip-sm" data-tooltip="tooltip"
                        data-placement="top" title="View More Details" href="/services/view/{{uid}}/{{id}}">
                        <i class="far fa-eye"></i>
                    </a>

                    
                </div>

                <div class="card-body pb-2">
                    <div class="d-flex align-items-center mt-4">
                        <div class="flex-fill">
                            {{#ifFile (concat './public/uploads/profile/' this.uid '/profilePic.png')}}
                                <img src="/uploads/profile/{{uid}}/profilePic.png" class="avatar rounded-circle img-fluid z-depth-1">
                            {{else}}
                                <img src="/img/profile/default.png" class="avatar rounded-circle img-fluid z-depth-1">
                            {{/ifFile}}

                            <a href="/profile/view/{{uid}}">{{username}}</a>
                        </div>

                        <div class="flex-fill text-right font-weight-bold">
                            {{views}}<i class="far fa-eye fa-fw ml-2"></i>
                        </div>
                    </div>
                    <div class="d-flex mt-4">
                        <div class="flex-fill">
                            <h4 class="card-title mb-0 name" data-names="{{name}}">
                                {{name}}
                            </h4>
                        </div>
                    </div>

                    <hr>

                    <p class="card-text">
                        {{desc}}
                    </p>

                    <div class="d-flex align-items-end">
                        <div class="flex-fill">
                            <span class="text-muted small mb-0">
                                Last Updated: {{date}}
                            </span>
                        </div>

                        <form class="flex-fill text-right" method="post" action="/services/fav/{{id}}">
                            <button class="btn btn-sm btn-red mr-0 material-tooltip-sm" data-tooltip="tooltip" data-placement="top" title="Favourite/Unfavourite" type="submit">
                                <span class="font-weight-bold">
                                    {{favourites}}<i class="fas fa-heart fa-fw ml-2"></i>
                                </span>
                            </button>
                        </form>
                    </div>
                </div>

                <div class="card-footer deep-purple accent-2 white-text text-center">
                    <h5 class="m-0">
                        ${{price}}
                    </h5>
                </div>

            </div>
        </div>
        {{/each}}
    </div>
    {{else}}
    <div>
        <h3 class="text-center font-weight-bold">No services at the moment</h3>
    </div>
    {{/if}}
</section>

