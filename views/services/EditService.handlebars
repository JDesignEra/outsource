<div class="container">
	<div class="card card-body">
		<h3 class="text-info font-weight-bold">Edit Service</h3>
		<form action="/services/saveService/{{services.id}}?_method=PUT" method="post" id="editService">
			<div class="row">
				<div class="col-lg-9">
					<div class="form-group">
						<label class="font-italic" for="name">Service name:</label>
						<input class="form-control" type="text" name="name" id="name" value="{{services.name}}">
					</div>
					<div class="form-group mb-4">
						<label class="font-italic" for="desc">Service Description:</label>
						<textarea class="form-control" id="desc" name="desc" rows="7">{{services.desc}}</textarea>
					</div>
					<div class="form-group">
						<label class="font-italic" for="price">Price ($):</label>
						<input class="form-control" type="number" name="price" id="price" value="{{services.price}}">
					</div>
				</div>
				<div class="col-lg-3">
					<label class="font-italic">Service poster (Optional)</label>
					<div class="custom-file">
						<input type="file" class="custom-file-input" id="customFileLang">
						<label class="custom-file-label primary-color" for="customFileLang"
							style="overflow-x: hidden">Upload an image</label>
					</div>
					{{!-- <input type="file" id="serviceUpload" name="serviceUpload" accept="image/png,image/jpeg,image/jpg,image/gif"> --}}
					<img id="poster" src="{{services.posterURL}}" alt="" class="border img-thumbnail img-fluid"
						style="height:95%;width:100%">
					<input id="posterURL" type="hidden" name="posterURL">
					<div class="font-weight-bold text-danger small" id="posterErr" style="display:none"></div>
				</div>
			</div>
			<div class="form-grup">
				<div class="row">
					<div class="col-lg-9">
						<label class="font-italic">Category</label>
						<br>
						<div class="form-check form-check-inline">
							<input class="form-check-input" type="checkbox" name="categories" id="graphics"
								value="Graphics & Design" {{radioCheck services.category 'Graphics & Design'}}>
							<label class="form-check-label" for="graphics">Graphics & Design</label>
						</div>
						<div class="form-check form-check-inline">
							<input class="form-check-input" type="checkbox" name="categories" id="writing"
								value="Writing & Translation" {{radioCheck services.category 'Writing & Translation'}}>
							<label class="form-check-label" for="writing">Writing & Translation</label>
						</div>
						<div class="form-check form-check-inline">
							<input class="form-check-input" type="checkbox" name="categories" id="video"
								value="Video & Animation" {{radioCheck services.category 'Video & Animation'}}>
							<label class="form-check-label" for="video">Video & Animation</label>
						</div>
						<div class="form-check form-check-inline">
							<input class="form-check-input" type="checkbox" name="categories" id="music"
								value="Music & Audio" {{radioCheck services.category 'Musci & Audio'}}>
							<label class="form-check-label" for="music">Music & Audio</label>
						</div>
						<div class="form-check form-check-inline">
							<input class="form-check-input" type="checkbox" name="categories" id="tech"
								value="Programming & Tech" {{radioCheck services.category 'Programming & Tech'}}>
							<label class="form-check-label" for="tech">Programming & Tech</label>
						</div>
					</div>
				</div>
			</div>
			<br>
			<a href="/user/profile" class="btn btn-danger">Cancel</a>
			<button id="buteditService" type="submit" class="btn btn-success" action="/services/AddService">Save Changes
			</button>
		</form>
	</div>
</div>
