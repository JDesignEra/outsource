<section class="viewservice container mx-auto">
    <div class="col-10 mx-auto row justify-content-around">
        <div class="col-lg-6">
            <div class="service-overview">
                <div class="card">
                    <div class="view overlay">
                        <img onerror='this.src = "/img/services/default.jpg"' class="card-img-top"
                            src="/uploads/services/{{services.uid}}/{{services.id}}.png" alt="Image unavailable">
                        <a>
                            <div class="mask rgba-white-slight"></div>
                        </a>
                    </div>
                    <div class="card-body">
                        <h4 class="card-title">{{services.name}}</h4>
                        <hr>
                        <p class="card-text">
                            {{services.desc}}
                        </p>
                        <p class="card-text">Last updated: {{services.date}}</p>
                        <div class="remarks">
                            <form method="post" action="/jobs/add/{{services.id}}">
                                <div class="form-group mb-4">
                                    <label class="font-italic card-text" for="remarks">Remarks:</label>
                                    <textarea class="form-control" id="remarks" name="remarks" rows="7"></textarea>
                                </div>
                                <div class="butcon text-right">
                                    <button id="butreq" type="submit" class="btn btn-success">Request
                                        Service
                                    </button>
                                    {{#if job}}<a href="/jobs/delete/{{job.id}}" class="btn btn-danger">Cancel
                                        Request</a>{{/if}}
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="card-footer deep-purple accent-2 white-text text-center mt-4">
                        <h5 class="m-0">
                            ${{services.price}}
                        </h5>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="user-overview">
                <div class="">
                    <!-- Card -->
                    <div class="card testimonial-card">

                        <!-- Background color -->
                        <div style="height:auto;" class="card-up indigo view lighten-1 rounded-0">

                            <img class="img-fluid jarallax-img lozad" onerror='this.src="/img/profile/banner.png"'
                                src="/uploads/profile/{{serviceuser.id}}/banner.png" alt="">

                            <div class="mask flex-center waves-effect waves-light">

                            </div>

                        </div>
                        <!-- Avatar -->
                        <div class="avatar mx-auto white mt-4">
                            <img onerror='this.src = "/img/profile/default.png"'
                                src="/uploads/profile/{{serviceuser.id}}/profilePic.png" class="rounded-circle lozad"
                                alt="">
                        </div>

                        <!-- Content -->
                        <div class="card-body">
                            <!-- Name -->
                            <a href="/profile/view/{{serviceuser.id}}">
                                <h3 class="card-title">{{serviceuser.username}}</h3>
                            </a>
                            <h5 class="card-title text-muted">{{#if serviceuser.jobTitle}}
                                {{serviceuser.jobTitle}}
                                {{else}}
                                Service Provider
                                {{/if}}</h5>
                            <br>
                            <p class="text-left"> <b>Followers:</b> {{getNum serviceuser.followers}} </p>
                            <p class="text-left"> <b>Following:</b> {{getNum serviceuser.following}}</p>
                            <hr class="hr-primary">

                            <p class="text-left"><b>Email:</b> {{serviceuser.email}}</p>

                            <hr class="hr-primary">


                        </div>
                    </div>

                    <br>
                    <br>
                </div>
            </div>
        </div>
    </div>
    </div>
</section>