<section class="viewservice container mx-auto">
    <div class="row justify-content-start">
        <div class="col-6">
            <div class="service-overview">
                <div class="card">
                    <div class="view overlay">
                        <img onerror='this.src = "/img/services/default.jpg"' class="card-img-top"
                            src="/uploads/services/{{services.uid}}/{{services.id}}.png" alt="Image unavailable">
                        <a>
                            <div class="mask rgba-white-slight"></div>
                        </a>
                    </div>
                    <a class="btn-floating btn-action ml-auto mr-4 mdb-color lighten-3" href="/services/payment"><i
                            class="fas fa-shopping-cart"></i></a>
                    <div class="card-body">
                        <h4 class="card-title">{{services.name}}</h4>
                        <hr>
                        <p class="card-text">{{services.desc}}</p>

                    </div>
                    <div class="card-footer deep-purple accent-2 white-text text-center mt-4">
                        <h5 class="m-0">
                            ${{services.price}}
                        </h5>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-6">
            <div class="user-overview">
                <div class="">
                    <!-- Card -->
                    <div class="card testimonial-card ">

                        <!-- Background color -->
                        <div style="height:auto;" class="card-up indigo lighten-1 rounded-0">


                        </div>
                        <!-- Avatar -->
                        <div class="avatar mx-auto white mt-4">
                            <img src="https://picsum.photos/id/659/400/" class="rounded-circle lozad" alt="">
                        </div>

                        <!-- Content -->
                        <div class="card-body">
                            <!-- Name -->
                            <h3 class="card-title">{{user.username}}</h3>
                            <h5 class="card-title text-muted">{{#if user.jobTitle}}
                                {{user.jobTitle}}
                                {{else}}
                                Service Provider
                                {{/if}}</h5>
                            <br>
                            <p class="text-left"> <b>Followers:</b> {{user.followers}} </p>
                            <p class="text-left"> <b>Following:</b> {{user.following}}</p>
                            <hr class="hr-primary">

                            <p class="text-left"><b>Website:</b> {{#if user.website}}
                                {{user.website}}
                                {{else}}
                                <span class="text-muted">None</span>
                                {{/if}}</p>
                            <p class="text-left"><b>Birthday:</b> {{#if user.dob}}
                                {{formatDate user.dob "DD MMM YYYY"}}
                                {{else}}
                                <span class="text-muted">Not Set</span>
                                {{/if}}</p>
                            <p class="text-left"><b>Gender:</b> {{#if user.gender}}
                                {{user.gender}}
                                {{else}}
                                <span class="text-muted">Not Set</span>
                                {{/if}}</p>
                            <p class="text-left"><b>Location:</b> {{#if user.location}}
                                {{user.location}}
                                {{else}}
                                <span class="text-muted">Not Set</span>
                                {{/if}}</p>
                            <p class="text-left"><b>Occupation:</b> {{#if user.occupation}}
                                {{user.occupation}}
                                {{else}}
                                <span class="text-muted">Not Set</span>
                                {{/if}}</p>
                            <p class="text-left"><b>Email:</b> {{user.email}}</p>

                            <hr class="hr-primary">


                        </div>
                    </div>

                    <br>
                    <br>
                </div>
            </div>
        </div>
    </div>
    </div>
</section>