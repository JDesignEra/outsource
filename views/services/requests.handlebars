<section class="requests">
    <table id="dtMaterialDesignExample" class="table table-striped" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th class="th-sm">Service provider</th>
                <th class="th-sm">Date Requested</th>
                <th class="th-sm">Service Name</th>
                <th class="th-sm">Payment Amount</th>
                <th class="th-sm">Remarks</th>
                <th class="th-sm"></th>
            </tr>
        </thead>
        <tbody>
            {{#if jobs}}
            {{#each jobs}}
            <tr>
                <td><a href="/profile/view/{{uid}}">{{uname}}</a></td>
                <td>{{date}}</td>
                <td>{{name}}</td>
                <td>${{salary}}</td>
                <td>{{remarks}}</td>
                <td class="row">
                <a href="/job/delete/{{id}}" class="btn btn-danger btn-sm col-lg-7 col-md-4 col-sm-3 material-tooltip-md" data-tooltip="tooltip" data-placement="top" title="Cancel request">Cancel request<i class="far fa-trash-alt ml-1"></i></a>
                </td>
            </tr>
            {{/each}}
            {{/if}}
        </tbody>
        <tfoot>
        </tfoot>
    </table>
</section>
{{#extend 'scripts'}}
<script src="/js/vendor/mdb/modules/datatables.min.js"></script>
<script src="/js/servicesscript.js"></script>
{{/extend}}